<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <rule name="PublicFolderRule" stopProcessing="true">
          <match url="public/(.*)" />
          <action type="Rewrite" url="public/{R:1}" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>